{
  "name": "cardnexus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "db:status": "prisma migrate status",
    "db:validate": "./scripts/validate-schema.sh",
    "db:sync": "prisma db push && prisma migrate resolve --applied $(ls prisma/migrations | tail -1)",
    "db:reset:local": "prisma migrate reset --force",
    "db:reset:neon": "DATABASE_URL=\"$NEON_DATABASE_URL\" prisma migrate reset --force",
    "pre-commit": "./scripts/pre-commit-hook.sh",
    "deploy:validate": "npm run db:validate && npm run build",
    "fetch:cards": "tsx scripts/fetch-pokemon-cards.ts",
    "fetch:regulation": "tsx scripts/fetch-step-by-step.ts",
    "fetch:improved": "tsx scripts/fetch-pokemon-improved.ts",
    "fetch:fast": "tsx scripts/fetch-fast.ts",
    "fetch:github": "tsx scripts/fetch-github-data.ts",
    "fetch:github:G": "tsx scripts/fetch-github-data.ts G",
    "fetch:github:H": "tsx scripts/fetch-github-data.ts H",
    "fetch:github:I": "tsx scripts/fetch-github-data.ts I",
    "import:cards": "tsx scripts/import-cards.ts",
    "import:cards:G": "tsx scripts/import-cards.ts single G",
    "import:cards:H": "tsx scripts/import-cards.ts single H",
    "import:cards:I": "tsx scripts/import-cards.ts single I",
    "import:stats": "tsx scripts/import-cards.ts stats",
    "fix:gametitles": "tsx scripts/fix-gametitles.ts",
    "check:gametitles": "tsx scripts/check-gametitles.ts",
    "test:search": "tsx scripts/test-card-search.ts",
    "translate:cards": "tsx scripts/translate-pokemon-cards.ts",
    "import:cards:ja": "tsx scripts/import-pokemon-cards-ja.ts",
    "setup:cards": "npm run fetch:cards && npm run import:cards && npm run translate:cards && npm run import:cards:ja",
    "fetch:cards:ja": "tsx scripts/fetch-pokemon-cards-japanese.ts",
    "fetch:cards:ja:v2": "tsx scripts/fetch-pokemon-cards-japanese-v2.ts",
    "setup:cards:ja": "npm run fetch:cards:ja:v2 && npm run import:cards:ja",
    "fetch:yugioh": "npx tsx scripts/fetch-yugioh-cards.ts",
    "import:yugioh": "npx tsx scripts/import-yugioh-cards.ts",
    "setup:yugioh": "npm run fetch:yugioh && npm run import:yugioh",
    "setup:all-cards": "npm run setup:cards && npm run setup:yugioh"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.17.1",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "next": "15.5.5",
    "next-auth": "^4.24.11",
    "prisma": "^6.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
